{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "actions": ["src/front/actions"],
            "components/*": ["src/front/components/*"],
            "constants/*": ["src/constants/*"],
            "handlers/*": ["src/front/handlers/*"],
            "handlers": ["src/front/handlers"],
            "routes/*": ["src/routes/*"],
            "types/*": ["src/types/*"],
            "templates/*": ["src/templates/*"],
            "system/*": ["src/system/*"],
            "env/*": ["src/env/development/*"],
            "build-scripts/*": ["build-scripts/*"]
        },
        "jsx": "react",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["es2017", "dom"]
    },
    "include": [
        "./build-scripts/**/*",
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}